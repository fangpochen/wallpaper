
.container {
	padding: 20rpx;
}
.upload-section {
	margin-bottom: 30rpx;
}
.preview {
	margin-top: 20rpx;
	width: 100%;
	height: 400rpx;
	background-color: #f8f8f8;
}
.preview image {
	width: 100%;
	height: 100%;
}
.form-section {
	background-color: #fff;
	padding: 20rpx;
	border-radius: 10rpx;
}
.form-item {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
	padding: 10rpx 0;
}
.form-item text {
	width: 120rpx;
}
.picker {
	flex: 1;
}
.submit-btn {
	margin-top: 30rpx;
	background-color: #007AFF;
	color: #fff;
}
.submit-btn[disabled] {
	background-color: #ccc;
}
.no-permission {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
}

