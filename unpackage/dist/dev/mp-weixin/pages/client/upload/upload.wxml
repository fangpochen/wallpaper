<view class="container"><block wx:if="{{isAdmin}}"><view><view class="upload-section"><button data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" class="upload-btn" bindtap="__e">选择图片</button><block wx:if="{{tempFilePath}}"><view class="preview"><image src="{{tempFilePath}}" mode="aspectFit"></image></view></block></view><view class="form-section"><view class="form-item"><text>标题：</text><input placeholder="请输入标题" data-event-opts="{{[['input',[['__set_model',['','title','$event',[]]]]]]}}" value="{{title}}" bindinput="__e"/></view><view class="form-item"><text>分类：</text><picker value="{{typeIndex}}" range="{{typeArray}}" range-key="name" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{typeArray[typeIndex].name}}</view></picker></view><button class="submit-btn" disabled="{{!tempFilePath}}" data-event-opts="{{[['tap',[['uploadImage',['$event']]]]]}}" bindtap="__e">上传图片</button></view></view></block><block wx:else><view class="no-permission"><text>抱歉，只有管理员才能上传图片</text></view></block></view>